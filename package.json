  "dependencies": {
    "concurrently": "^4.0.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.5",
    "wait-on": "^2.1.0"
  },
  "main": "src/electron-starter.js",
  "scripts": {
